/* pages/demo/demo.wxss */
.product-lists{
  padding:0 15rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.hide-over{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
page{
  height: 100%;
}
.product-list{
  height: 430rpx;
  border:solid 1rpx #eaeaea;
  width:340rpx;
  box-sizing: border-box;
  margin:0 10rpx 20rpx;
}
.product-list-name{
    font-size: 35rpx;
    line-height: 50rpx;
    padding:0 10rpx;
}
.product-list-subname{
   font-size: 25rpx;
   line-height: 40rpx;
   color:#666;
   padding:0 10rpx;
}
.product-list-price{
  font-size: 25rpx;
  line-height: 40rpx;
  color:#F2551E;
  padding:0 10rpx;
}
.product-list-normal-price{
  color:#BEBEBE;
  text-decoration: line-through;
  padding-left: 20rpx;
}
.product-list-img{
  width:100%;
  height: 120px;
}
.product-list-num{
  font-size: 20rpx;
  line-height: 30rpx;
  color:#BEBEBE;
  padding:0 10rpx;
  display: flex;
  justify-content: space-between;
}